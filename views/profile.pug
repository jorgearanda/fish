doctype html
html
  head
    title Fish - Update My Profile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/bower/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/public/css/grid.css')
    script(src='/bower/jquery/jquery.min.js')
    script(type='text/javascript', src='/public/js/profile.js')
  body
    .container
      .page-header
        h1 Update Profile
      .col-md-4
        .row
          .form-group
            label.form-label.col-md-6(for='name') Name
            .col-md-6
              input#name.form-control(type='text', name='name', style='width:250px', value=name, autofocus='')
        .row
          .form-group
            label.form-label.col-md-6(for='email') Email
            .col-md-6
              input#email.form-control(type='email', name='email', style='width:250px', value=email)
        .row
          .form-group
            label.form-label.col-md-6(for='password') Password
            .col-md-6
              input#password.form-control(type='password', name='rawPassword')
        .row
          .form-group
            label.form-label.col-md-6(for='confirm') Confirm Password
            .col-md-6
              input#confirmPass.form-control(type='password', name='confirmPass')

        button#do-update.btn.btn-success(type='submit') Update profile
        form(style='display:inline', method='get', action='./dashboard')
          button.btn.btn-default(type='submit') Cancel
