{
  "name": "fishsim",
  "version": "5.1.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/jorgearanda/fish"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": ["./dist/app.js"],
    "delay": 5000
  },
  "scripts": {
    "build-as-needed" : "find ./src ./public ./views | entr -n -s 'npm run build' &",
    "build" : "npm run build:server && npm run build:client",
    "build:server": "echo 'Building server' && babel --verbose src -d dist",
    "build:client" : "echo 'Building client' && babel --verbose public/js -d dist/public/js",
    "serve": "node dist/app.js",
    "servemon": "nodemon dist/app.js",
    "serve-pm2": "pm2 start dist/app.js --name Fish --log \"logs/fishlog_$( date '+%Y-%m-%d_%H-%M-%S' )\"",
    "start": "set NODE_ENV=production && npm run build && npm run serve",
    "start-pm2": "set NODE_ENV=production && npm run build && npm run serve-pm2",
    "dev": "set NODE_ENV=development && npm run build-as-needed ; npm run servemon",
    "test": "NODE_ENV=test nyc mocha --exit --recursive --require babel-register 'src/**/*.test.js' 'public/js/**/*.test.js'",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "./node_modules/eslint/bin/eslint.js 'src/**/*.js'",
    "style-check": "./node_modules/prettier/bin-prettier.js --check 'src/**/*.js'",
    "style-fix": "./node_modules/prettier/bin-prettier.js --write 'src/**/*.js'",
    "postinstall": "echo 'Populating Database with:\n==============\nuser: Admin \npass:123456789\n==============\nPlease change this password immediately.'; mongosh developer_scripts/populate_db.js",
    "cleandb": "mongosh developer_scripts/clean_db.js",
    "populatedb": "mongosh developer_scripts/populate_db.js",
    "resetdb": "mongosh developer_scripts/clean_db.js; mongosh developer_scripts/populate_db.js; echo 'DB wiped and repopulated with default admin user. user: Admin. pass: 123456789'",
    "devreset": "mongosh developer_scripts/clean_db.js; mongosh developer_scripts/populate_db.js; echo 'DB wiped and repopulated with default admin user. user: Admin. pass: 123456789'; nodemon dist/app.js",
    "sass": "sass --watch public/scss/:public/css/",
    "start-docker": "touch ./mongo.log && docker-compose up",
    "start-daemon-docker": "touch ./mongo.log && docker-compose up -d",
    "stop-daemon-docker": "docker-compose down",
    "build-docker": "docker-compose build --force-rm",
    "logs-docker-fish": "docker-compose logs -f fish",
    "logs-docker-mongo-fish": "docker-compose logs -f mongo-fish",
    "docker-populatedb": "docker exec mongo-fish mongosh populate_db.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "async": "^2.6.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "chai": "^4.3.7",
    "chance": "^1.1.11",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "json-2-csv": "^3.20.0",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "mongoose": "^6.11.5",
    "morgan": "^1.10.0",
    "node": "18.17",
    "nodemon": "^2.0.22",
    "pug": "^3.0.2",
    "request": "^2.88.2",
    "serve-favicon": "^2.5.0",
    "serve-static": "^1.15.0",
    "socket.io": "^2.5.0",
    "socket.io-client": "^2.5.0",
    "winston": "^2.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "babel-loader": "^8.3.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "should": "^13.2.3",
    "superagent": "^4.1.0",
    "supertest": "^3.4.2"
  },
  "engines": { 
  },
  "nyc": {
    "all": true,
    "include": [
      "src",
      "public/js"
    ],
    "exclude": "**/*.test.js"
  }
}
